<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="30dp"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_overlay_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardBackgroundColor="#95000000"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="0dp"
            app:contentPadding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:backgroundTintMode="add"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/show_hide_entire_overlay_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_remove_red_eye_red_24dp" />

                <LinearLayout
                    android:id="@+id/show_hide_layout_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/overlay_position_lock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_lock_open_white_24dp" />

                    <ImageView
                        android:id="@+id/overlay_show_joystick"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_joytick" />

                    <ImageView
                        android:id="@+id/overlay_teleport_button"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_location_on_white_24dp" />

                    <ImageView
                        android:id="@+id/overlay_stop_walking"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_stop_sign"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/overlay_gpx_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_map_location" />

                    <ImageView
                        android:id="@+id/overlay_speed_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_runner" />

                    <ImageView
                        android:id="@+id/overlay_show_nearby"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_radar" />

                    <ImageView
                        android:id="@+id/overlay_show_gyms"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_gym"
                        />

                    <ImageView
                        android:id="@+id/overlay_show_incident"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/grunt_4" />

                    <ImageView
                        android:id="@+id/overlay_show_injection_settings"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_menu_send_white" />

                    <ImageView
                        android:id="@+id/overlay_show_map_settings"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_map" />

                    <ImageView
                        android:id="@+id/cooldown_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_clock" />

                    <ImageView
                        android:id="@+id/overlay_toggle_drag"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_drag" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>